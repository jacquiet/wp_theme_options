                    <width>3/6</width>
                    <title>Activity</title>
                    <subtitle>Activity information about posts.</subtitle>
                    <metafields>
                        <metafield>
                            <type>text</type>
                            <name>text1</name>
                            <label>Text</label>
                            <description>Description...</description>
                        </metafield>
                    </metafields>
                </section>
            </sections>
        </page>
        <page>
            <name>Home</name>
            <masonry>true</masonry>
            <sections>
                <section>
                    <width>3/6</width>
                    <title>Another Title</title>
                    <subtitle>Activity information about posts.</subtitle>
                    <metafields>
                        <metafield>
                            <type>text</type>
                            <name>text2</name>
                            <label>Text</label>
                            <description>Description...</description>
                        </metafield>
                    </metafields>
                </section>
            </sections>
        </page>
    </pages>
</config>